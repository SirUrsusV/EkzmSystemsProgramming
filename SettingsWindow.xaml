<Window x:Class="EkzSystemsProgramming.SettingsWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:EkzSystemsProgramming"
		mc:Ignorable="d"
		Title="Settings" Height="450" Width="800">
	<ScrollViewer>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0" Margin="5" Header="Логирование">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Margin="5" FontSize="20" Grid.Row="0" HorizontalAlignment="Right" Text="Путь к паке логов: "/>
                    <TextBlock Margin="5" FontSize="20" Grid.Row="1" HorizontalAlignment="Right" Text="Сочетание клавиш для создания лога: "/>
                    <TextBlock Margin="5" FontSize="20" Grid.Row="2" HorizontalAlignment="Right" Text="Период логирования: "/>
                    <TextBlock Margin="5" FontSize="20" Grid.Row="3" HorizontalAlignment="Right" Text="Лоировать процессы: "/>
                    <TextBlock Margin="5" FontSize="20" Grid.Row="4" HorizontalAlignment="Right" Text="Лоировать нажатие клавиш: "/>

                    <TextBox Margin="5" FontSize="20" Grid.Row="0" Grid.Column="1"/>
                    <TextBox Margin="5" FontSize="20" Grid.Row="1" Grid.Column="1"/>

                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBox Margin="5" FontSize="20" Grid.Row="2" Grid.Column="0" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="5" FontSize="20" Grid.Row="2" Grid.Column="1" Width="60" Text="Минут" HorizontalAlignment="Center"/>
                    </Grid>

                    <CheckBox VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" />
                    <CheckBox VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" />
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="1" Margin="5" Header="Настройки цензуры">
                <StackPanel>
                    <Button FontSize="20" Content="Открыть список запрещённых процессов" Style="{StaticResource typeBt}" HorizontalAlignment="Left" Height="40" Width="500" Margin="10"/>
                    <Button FontSize="20" Content="Открыть список запрещённых вводимых слов" Style="{StaticResource typeBt}" HorizontalAlignment="Left" Height="40" Width="500" Margin="10"/>

                </StackPanel>
            </GroupBox>

            <Button Grid.Row="4" Content="Потдвердить" Margin="10" Style="{StaticResource ResourceKey=typeBt}"/>
        </Grid>
    </ScrollViewer>
	
</Window>
