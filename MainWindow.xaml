<Window x:Class="EkzSystemsProgramming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EkzSystemsProgramming"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Style="{StaticResource typeBt}" Height="50" Width="500" Grid.Row="0" Content="Старт"/>
        <Button Style="{StaticResource typeBt}" Height="50" Width="500" Grid.Row="1" Content="Настройки"/>
        <Button Style="{StaticResource typeBt}" Height="50" Width="500" Grid.Row="2" Content="Открыть папку с логами"/>

    </Grid>
</Window>
